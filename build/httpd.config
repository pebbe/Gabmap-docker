server.document-root = "/mod/Gabmap/"

server.port = 9000

server.username = "web"
server.groupname = "web"

server.pid-file = "/var/run/lighttpd.pid"

mimetype.assign = (
  ".css"  => "text/css",
  ".eps"  => "application/postscript",
  ".html" => "text/html; charset=UTF-8",
  ".jpg"  => "image/jpeg",
  ".js"   => "application/javascript",
  ".kml"  => "application/vnd.google-earth.kml+xml",
  ".kmz"  => "application/vnd.google-earth.kmz",
  ".pdf"  => "application/pdf",
  ".png"  => "image/png",
  ".ps"   => "application/postscript",
  ".txt"  => "text/plain; charset=UTF-8",
  ".u16"  => "text/plain; charset=UTF-16",
  ".utxt" => "text/plain; charset=UTF-8"
)

index-file.names = ( "index.html" )

server.modules = ( "mod_alias", "mod_cgi", "mod_dirlisting" )
cgi.execute-x-only = "enable"
alias.url = ( "/bin" => "/mod/Gabmap/bin" )
$HTTP["url"] =~ "^/bin" {
  cgi.assign = ( "" => "" )
}

dir-listing.activate = "enable"
dir-listing.hide-dotfiles = "enable"
dir-listing.exclude = ( "HEADER.html" )
